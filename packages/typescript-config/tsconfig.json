{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "types": ["react"],
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },

  "exclude": ["node_modules", "dist"]
}
